{
  "name": "@substrate-system/meta-tags",
  "version": "0.0.5",
  "description": "Meta tags for the internet",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "main": "dist/index.js",
  "bin": {
    "metas": "./dist/cli.js"
  },
  "directories": {
    "example": "example",
    "test": "test"
  },
  "files": [
    "./dist/*"
  ],
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "test": "npm run test:node && npm run test:browser",
    "test:browser": "esbuild ./test/index.ts --bundle | tapout",
    "test:node": "esbuild ./test/index.ts --bundle | node",
    "build-cjs": "esbuild src/*.ts --format=cjs --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --out-extension:.js=.cjs --sourcemap",
    "build-cjs:min": "esbuild src/index.ts src/image.ts --format=cjs --minify --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --out-extension:.js=.min.cjs --sourcemap",
    "build-esm": "esbuild src/*.ts --format=esm --metafile=dist/meta.json --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --sourcemap && tsc --emitDeclarationOnly --project tsconfig.build.json --outDir dist",
    "build-esm:min": "esbuild ./src/index.ts ./src/image.ts --format=esm --keep-names --bundle --tsconfig=tsconfig.build.json --minify --out-extension:.js=.min.js --outdir=./dist --sourcemap",
    "build-example": "mkdir -p ./public && rm -rf ./public/* && vite --mode staging --base=\"/meta-tags\" build",
    "build-docs": "typedoc ./src/index.ts",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && npm run build-esm && npm run build-esm:min && npm run build-cjs:min",
    "start": "vite",
    "toc": "markdown-toc --maxdepth 3 -i README.md",
    "preversion": "npm run lint",
    "version": "npm run toc && auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md README.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@types/yargs": "^17.0.35",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@substrate-system/debug": "^0.9.24",
    "@substrate-system/tapout": "^0.0.35",
    "@substrate-system/tapzero": "^0.10.16",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "auto-changelog": "^2.4.0",
    "esbuild": "^0.27.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "htm": "^3.1.1",
    "markdown-toc": "^1.2.0",
    "postcss-nesting": "^14.0.0",
    "preact": "^10.27.0",
    "tap-spec": "^5.0.0",
    "typedoc": "^0.28.9",
    "typescript": "^5.9.2",
    "vite": "^7.0.6"
  },
  "keywords": [
    "meta",
    "tag",
    "html"
  ],
  "homepage": "https://github.com/substrate-system/meta-tags",
  "bugs": {
    "url": "https://github.com/substrate-system/meta-tags/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/substrate-system/meta-tags.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": "nichoth <nichoth@nichoth.com> (https://nichoth.com)"
}
